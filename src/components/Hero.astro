---
import { Button } from "./ui/button";
import { Motiondiv } from './Motion'
---

<section class="h-screen xl:h-[80vh] bg-[#b2b7c2]/10" id="home">
  <div class="container mx-auto h-full xl:pt-10">
    <div
      class="flex flex-col md:flex-row justify-center items-center xl:justify-start h-full"
    >
      {/* text */}
      <div class="text-center xl:max-w-xl xl:text-left mt-16 xl:mt-0">
        <Motiondiv direction="down" delay={0.2} initial="hidden" whileInView={"show"} once={false} amount={0.6} client:load>
          <h1 class="text-4xl font-bold xl:pb-4">
            Explora las mejores ofertas <span class="text-red-400">globales</span>
          </h1>
        </Motiondiv>
        <Motiondiv direction="down" delay={0.4} initial="hidden" whileInView={"show"} once={false} amount={0.6} client:load>
          <p
          class="max-w-[550px] mx-auto xl:mx-0 mb-6 xl:mb-10 text-muted-foreground"
        >
          Brief description with insights into myself, my vocational journey
        </p>
        </Motiondiv>
        <Motiondiv direction="down" delay={0.6} initial="hidden" whileInView={"show"} once={false} amount={0.8} client:load>
          <div class="flex gap-x-3 justify-center xl:justify-start">
            <Button className="px-4 py-6 shadow-lg">
              <img src="/icons/buttons/app-store.svg" width="132" height="36" />
            </Button>
            <Button className="px-4 py-6 shadow-lg">
              <img src="/icons/buttons/google-play.svg" width="132" height="36" />
            </Button>
          </div>
        </Motiondiv>
      </div>
      <Motiondiv direction="up" delay={0.6} initial="hidden" whileInView={"show"} once={false} amount={0.6} client:load>
      <div class="md:max-w-[300px] lg:max-w-[600px]">
        <img
          src="/images/hero/car.svg"
          alt="auto"
          class="object-fill w-full h-full"
        />
      </div>
      </Motiondiv>
    </div>
  </div>
</section>
