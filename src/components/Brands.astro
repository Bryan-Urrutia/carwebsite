---
type Icon = {
  name: string;
  img: string;
  width: string;
  height: string;
};

const icons: Icon[] = [
  { name: 'ford', img: 'icons/brands/ford.svg', width: '85', height: '85' },
  { name: 'audi', img: 'icons/brands/audi.svg', width: '85', height: '85' },
  { name: 'bmw', img: 'icons/brands/bmw.svg', width: '85', height: '85' },
  { name: 'mazda', img: 'icons/brands/mazda.svg', width: '85', height: '85' },
  { name: 'mercedes', img: 'icons/brands/mercedes.svg', width: '85', height: '85' },
  { name: 'skoda', img: 'icons/brands/skoda.svg', width: '85', height: '85' },
  { name: 'vw', img: 'icons/brands/vw.svg', width: '85', height: '85' },
];
---

<div class="xl:pt-16 xl:h-[200px] flex flex-col justify-center">
  <div class="container mx-auto">
    <div class="grid grid-cols-3 gap-6 place-items-center xl:flex xl:flex-wrap xl:gap-x-6 xl:justify-center">
      {icons.map((item: Icon) => (
        <div>
          <img
            src={item.img}
            alt={item.name}
            width={item.width}
            height={item.height}
          />
        </div>
      ))}
    </div>
  </div>
</div>
